<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หมายเลขครุภัณฑ์" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อ" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผู้รับผิดชอบ" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ห้องเก็บ" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="โทร" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อี-เมล์" />

            <TextView
                android:id="@+id/txt_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ประเภท" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สถานะ" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หมายเลขครุภัณฑ์" />

            <TextView
                android:id="@+id/name__product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อ" />

            <TextView

                android:id="@+id/respos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผู้รับผิดชอบ" />

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ห้องเก็บ" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="โทร" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อี-เมล์" />

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ประเภท" />

            <TextView
                android:id="@+id/status_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ประเภท" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_show_list"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</LinearLayout>